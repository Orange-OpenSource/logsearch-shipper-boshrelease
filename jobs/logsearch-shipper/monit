<% if_p('logsearch.logs.enabled') do %>
check process logsearch-logs with pidfile /var/vcap/sys/run/logsearch-shipper/logs.pid
  group vcap
  start program = "/var/vcap/jobs/logsearch-shipper/bin/logs.control start"
  stop program = "/var/vcap/jobs/logsearch-shipper/bin/logs.control stop"
<% end %>

<% if_p('logsearch.metrics.enabled') do %>
check process logsearch-metrics-collectd with pidfile /var/vcap/sys/run/logsearch-shipper/metrics-collectd.pid
  group vcap
  start program = "/var/vcap/jobs/logsearch-shipper/bin/metrics-collectd.control start"
  stop program = "/var/vcap/jobs/logsearch-shipper/bin/metrics-collectd.control stop"

check process logsearch-metrics-monit with pidfile /var/vcap/sys/run/logsearch-shipper/metrics-monit.pid
  group vcap
  start program = "/var/vcap/jobs/logsearch-shipper/bin/metrics-monit.control start"
  stop program = "/var/vcap/jobs/logsearch-shipper/bin/metrics-monit.control stop"
<% end %>
