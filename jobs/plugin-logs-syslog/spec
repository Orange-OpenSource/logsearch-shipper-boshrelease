---
name: "plugin-logs-syslog"
packages:
  - "plugin-logs-nxlog"
templates:
  bin/control: "bin/control"
  bin/generate-config.erb: "bin/generate-config"
  etc/ssl.key.erb: "etc/ssl.key"
  etc/ssl.crt.erb: "etc/ssl.crt"
  etc/ssl-ca.crt.erb: "etc/ssl-ca.crt"
properties:
  plugin.logs.syslog.server:
    description: "The upstream server in the format of `host:port`"
  plugin.logs.syslog.ssl_ca_certificate:
    default: ~
    description: "The upstream SSL certificate to use for authentication"
  plugin.logs.syslog.ssl_certificate:
    default: ~
    description: "A SSL certificate to use for authentication"
  plugin.logs.syslog.ssl_key:
    default: ~
    description: "A SSL key to use for authentication"
  plugin.logs.syslog.transport:
    default: "tcp"
    description: "Transport to use with upstream server (tcp|udp)"
  plugin.logs.syslog._builtin_defaults:
    default: |
      ---
      files:
        "plugin-logs-syslog/*.log": ~
  plugin.logs.syslog._defaults:
    default: ~
    description: "Default log forwarding configuration applied to syslog files"
  plugin.logs.syslog._overrides:
    default: ~
    description: "Override template configuration applied to syslog-forwarded files"
  plugin.logs.start_delay:
    default: ~
    description: "Delay startup commands by this number of seconds"
  plugin.logs._builtin_defaults:
    default: |
      ---
      files:
        "**/*.log":
          fields:
            bosh_deployment: "{{deployment}}"
            bosh_job: "{{job}}/{{index}}"
            bosh_template: "{{file_template}}"
        "**/*.stdout.log":
          fields:
            stream: "stdout"
        "**/stdout.log":
          fields:
            stream: "stdout"
        "**/*.stderr.log":
          fields:
            stream: "stderr"
        "**/stderr.log":
          fields:
            stream: "stderr"
  plugin.logs._defaults:
    default: ~
    description: "Default log forwarding configuration applied to all forwarded files"
  plugin.logs._overrides:
    default: ~
    description: "Override template configuration applied to all forwarded files"
